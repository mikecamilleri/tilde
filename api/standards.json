        "WEIGHT": {
            "meta": {
                "name": "Weight"
            },
            "validation": {
                "gqlFeatureType": "FloatFeature",
                "fields": {
                    "unit": {
                        "valid": [
                            "GRAM",
                            "POUND"
                        ]
                    }
                }
            }
        },
        "VOLUME": {
            "meta": {
                "name": "Volume"
            },
            "validation": {
                "gqlFeatureType": "FloatFeature",
