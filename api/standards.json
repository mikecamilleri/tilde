                    }
                }
            }
        },
        "SWITCH": {
            "meta": {
                "name": "Switch",
                "description": "A simple on/off switch."
            },
            "validation": {
                "gqlFeatureType": "StringFeature",
                "fields": {
                    "options": {
                        "required": [
                            "ON",
                            "OFF"
                        ]
                    },
                    "valid": {}
                }
            }
        },
        "THERMOSTAT_MODE": {
            "meta": {
                "name": "Thermostat Mode",
                "description": "The operating mode of a thermostat."
            },
            "validation": {
                "gqlFeatureType": "StringFeature",
                "fields": {
                    "options": {
                        "required": [
                            "HEAT",
                            "COOL",
                            "AUTO",
                            "OFF"
                        ]
                    },
                    "valid": {}
                }
            }
        }
